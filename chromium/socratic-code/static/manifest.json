{
	"manifest_version": 3,
	"name": "Socratic Code",
	"description": "A browser extension made with Svelte Kit",
	"version": "0.0.1",
	"icons": {
		"32": "socrates_32.png",
		"64": "socrates_64.png",
		"512": "socrates_512.png"
	},
	"action": {
		"default_title": "Socratic Code",
		"default_popup": "index.html"
	},
	"permissions": ["activeTab", "storage", "webRequest"],
	"host_permissions": ["https://leetcode.com/*", "https://*.leetcode.com/*", "http://localhost/*"],
	"content_scripts": [
		{
			"matches": ["https://leetcode.com/*", "https://*.leetcode.com/*"],
			"js": ["content.js"]
		}
	],
	"background": {
		"service_worker": "service_worker.js",
		"type": "module"
	}
}
